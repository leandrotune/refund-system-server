generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  @@map("users")
}

model Refund {
  id         String  @id() @default(uuid())
  personName String
  category   String
  amount     Decimal
  nameFile   String

  @@map("refunds")
}
